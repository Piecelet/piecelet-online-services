{
  "name": "api",
  "scripts": {
    "dev": "wrangler dev",
    "build": "npx tsc --noEmit",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "prepare:db:dev": "npm run auth:update && npm run db:generate && npm run db:migrate:dev",
    "prepare:db:prod": "npm run auth:update && npm run db:generate && npm run db:migrate:prod",
    "auth:generate": "npx --yes @better-auth/cli@latest generate --config src/auth/index.ts --output src/db/auth.schema.ts -y",
    "auth:format": "npx --yes prettier --write src/db/auth.schema.ts",
    "auth:update": "npm run auth:generate && npm run auth:format",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "wrangler d1 migrations apply ACCOUNT_DATABASE --local",
    "db:migrate:prod": "wrangler d1 migrations apply ACCOUNT_DATABASE --remote",
    "db:studio:dev": "drizzle-kit studio",
    "db:studio:prod": "NODE_ENV=production drizzle-kit studio"
  },
  "dependencies": {
    "better-auth": "^1.3.34",
    "better-auth-cloudflare": "^0.2.8",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/types": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/utils": "workspace:*",
    "drizzle-kit": "^0.31.6",
    "wrangler": "^4.47.0"
  }
}