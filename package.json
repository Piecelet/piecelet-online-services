{
	"name": "piecelet-online-services",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
    	"dev": "wrangler dev",
		"dev:vite": "vite dev",
    	"build": "npx tsc --noEmit",
		"build:vite": "vite build",
		"preview:vite": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepare:db:dev": "npm run auth:update && npm run db:generate && npm run db:migrate:dev",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "eslint . && prettier --check .",
		"format": "prettier --write .",
		"auth:generate": "npx --yes @better-auth/cli@latest generate --config src/lib/auth/index.ts --output src/lib/db/auth.schema.ts -y",
		"auth:format": "npx --yes prettier --write src/lib/db/auth.schema.ts",
		"auth:update": "npm run auth:generate && npm run auth:format",
    	"db:generate": "drizzle-kit generate",
		"db:migrate:dev": "wrangler d1 migrations apply ACCOUNT_DATABASE --local",
		"db:migrate:prod": "wrangler d1 migrations apply ACCOUNT_DATABASE --remote",
		"db:studio:dev": "drizzle-kit studio",
		"db:studio:prod": "NODE_ENV=production drizzle-kit studio",
 	    "deploy": "wrangler deploy --minify",
		"cf-typegen": "wrangler types ./src/worker-configuration.d.ts",
		"cf-cleanup": "rm -rf ./.wrangler"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.3.34",
		"@cloudflare/workers-types": "^4.20251111.0",
		"@eslint/compat": "^1.4.1",
		"@eslint/js": "^9.39.1",
		"@melt-ui/pp": "^0.3.2",
		"@melt-ui/svelte": "^0.86.6",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-cloudflare": "^7.2.4",
		"@sveltejs/kit": "^2.48.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.17",
		"@types/node": "^24.10.1",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.5",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.13.0",
		"globals": "^16.5.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"svelte": "^5.43.6",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.4",
		"vite": "^7.2.2",
		"wrangler": "^4.47.0"
	},
	"dependencies": {
		"better-auth": "^1.3.34",
		"better-auth-cloudflare": "^0.2.8",
		"better-sqlite3": "^12.4.1"
	},
	"packageManager": "pnpm@10.21.0+sha512.da3337267e400fdd3d479a6c68079ac6db01d8ca4f67572083e722775a796788a7a9956613749e000fac20d424b594f7a791a5f4e2e13581c5ef947f26968a40"
}
