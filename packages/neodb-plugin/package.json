{
  "name": "better-auth-neodb",
  "version": "0.1.0",
  "description": "NeoDB OAuth plugin for Better Auth, with secure token handling and NeoDB-specific helpers.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run type-check"
  },
  "keywords": [
    "better-auth",
    "neodb",
    "oauth",
    "auth",
    "plugin"
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "better-auth": "^1.3.34",
    "eslint": "^9.39.1",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "better-auth": "^1.3.34"
  }
}
